<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>

<h2>Comments</h2>
<%= render @post.comments %>



<h3>Add a Comment </h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
	<%= f.label :commenter %><br/>
	<%=f.text_field :commenter %>
</p>
<p>
	<%= f.label :body %><br/>
	<%=f.text_area :body %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>

