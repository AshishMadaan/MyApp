<h2>All Posts</h2>

<table>
  <tr>
    <td><strong>Title</strong></td>
    <td style="padding-left: 50px;"><strong>Text</strong></td>

  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td style="padding-left: 50px;"><%= post.text %></td>
   	  <td><%= link_to "Show", post_path(post) %>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
	  <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
 	
    </tr>
  <% end %>
</table>

<%= link_to "Create Post", new_post_path %>